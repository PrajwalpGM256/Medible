# Medible Backend Environment Variables
# Copy this to .env and fill in your values

# Flask Environment (development, production, testing)
FLASK_ENV=production

# Secret key for JWT - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here

# Database URL (Railway provides this automatically)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/medible

# CORS - Frontend URLs allowed to access the API
# Comma-separated list of origins
CORS_ORIGINS=https://your-app.vercel.app,https://medible.vercel.app

# USDA API Key (optional, for food nutrition data)
# Get from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=

# Redis URL (optional, for rate limiting in production)
REDIS_URL=
